{
    "name": "concordcrm/app",
    "type": "project",
    "description": "Self hosted deals management CRM.",
    "require": {
        "php": "^8.2",
        "akaunting/laravel-money": "^5.2",
        "aws/aws-sdk-php": "^3.268",
        "barryvdh/laravel-dompdf": "^3.0",
        "cyrildewit/eloquent-viewable": "^7.0",
        "ddeboer/imap": "^1.19",
        "genealabs/laravel-model-caching": "^11.0",
        "genealabs/laravel-pivot-events": "^11.0",
        "google/apiclient": "^2.15.0",
        "guzzlehttp/guzzle": "^7.2",
        "kub-at/php-simple-html-dom-parser": "^1.9",
        "laravel/framework": "^11.9",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/oauth2-client": "^2.4",
        "league/oauth2-google": "^4.0",
        "maatwebsite/excel": "^3.1",
        "mavinoo/laravel-batch": "^2.3",
        "microsoft/microsoft-graph": "^1.94",
        "mustache/mustache": "^2.12",
        "nwidart/laravel-modules": "^11.0",
        "pelago/emogrifier": "^7.0",
        "plank/laravel-mediable": "^6.1",
        "plank/laravel-metable": "^6.0",
        "predis/predis": "^2.0",
        "pusher/pusher-php-server": "^7.0",
        "soundasleep/html2text": "^2.0",
        "spatie/icalendar-generator": "^2.0",
        "spatie/laravel-activitylog": "^4.3",
        "spatie/laravel-permission": "^6.4",
        "spatie/url": "^2.0",
        "symfony/finder": "^7.0",
        "symfony/mailer": "^7.0",
        "symfony/mime": "^7.0",
        "symfony/process": "^7.0",
        "twilio/sdk": "^8.2",
        "webpatser/laravel-countries": "^1.5",
        "willdurand/email-reply-parser": "^2.8",
        "xemlock/htmlpurifier-html5": "^0.1.11",
        "zbateson/mail-mime-parser": "^3.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.10",
        "barryvdh/laravel-ide-helper": "^3.0",
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "modules/*/composer.json"
            ]
        },
        "google/apiclient-services": [
            "Calendar",
            "Gmail"
        ],
        "aws/aws-sdk-php": [
            "S3",
            "DynamoDb",
            "Sqs",
            "Ses",
            "SesV2"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Database\\State\\": "database/state/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "cleanup": [
            "App\\Composer\\Cleanup::perform",
            "@composer dumpautoload",
            "@php artisan core:clear-cache"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
